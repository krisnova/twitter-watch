DNS=$(echo $1 | cut -d "," -f 1 )
IP=$(echo $1 | cut -d "," -f 2 )
#echo "Checking $DNS at $IP..."

ping -c 1 -W 1 $DNS
IS_OFFLINE=$?

RECORD=$(jq --null-input \
  --arg dns "$DNS" \
  --arg ip "$IP" \
  --arg offline "$IS_OFFLINE" \
  '{"dns": $dns, "offline": $offline, "ip": $ip}')

echo $RECORD
